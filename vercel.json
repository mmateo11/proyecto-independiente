{
  "version": 2,
  "builds": [
    { "src": "API/server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/(noticias|socios|jugadores|partidos)(.*)",
      "dest": "/API/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
