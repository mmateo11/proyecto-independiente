{
  "version": 2,
  "builds": [
    { "src": "/API/server.js", "use": "@vercel/node" },
    { "src": "/public/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(noticias|socios|jugadores|partidos)(.*)",
      "dest": "/API/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}